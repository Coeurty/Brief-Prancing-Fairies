{% extends 'base.html.twig' %}

{% block title %}Liste des articles
{% endblock %}

{% block body %}
	<h1 class="mt-4 mb-4 text-2xl font-extrabold leading-none tracking-tight text-gray-900 md:text-3xl lg:text-4xl dark:text-white">Liste des articles</h1>
	<div class="container mx-auto px-4">
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
			{% for article in articles %}
				<article class="overflow-hidden rounded-lg border border-gray-100 bg-white shadow-sm">
					<img alt="" src="{{ article.coverImage }}" class="h-56 w-full object-cover"/>

					<div class="p-4 sm:p-6">
						<a href="#">
							<h3 class="text-lg font-medium text-gray-900">
								{{ article.title }}
							</h3>
						</a>

						<p class="mt-2 line-clamp-3 text-sm/relaxed text-gray-500">
							{{ article.standFirst}}
						</p>

						<a href="{{ path('app_article_show', {'slug': article.slug}) }}" class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-blue-600">
							Voir plus
							<span aria-hidden="true" class="block transition-all group-hover:ms-0.5 rtl:rotate-180">&rarr;</span>
						</a>
					</div>
				</article>
			{% endfor %}
		</div>
	</div>
{% endblock %}
