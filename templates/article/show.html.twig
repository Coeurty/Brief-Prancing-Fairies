{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold mb-4">{{ article.title }}</h1>

		<div class="mb-6">
			<img src="{{ article.coverImage }}" alt="{{ article.title }}" class="w-full h-auto rounded-lg shadow-md">
		</div>

		<div class="mb-6">
			<p class="text-gray-700 text-lg">{{ article.standFirst }}</p>
		</div>

		<div class="mb-6">
			<p class="text-gray-500 text-sm">Créé le:
				{{ article.createdAt|date('d/m/Y H:i') }}</p>
		</div>

		<div class="mb-6">
			<p class="text-gray-500 text-sm">Mis à jour le:
				{{ article.updatedAt|date('d/m/Y H:i') }}</p>
		</div>

		<div class="prose max-w-none">
			{{ article.content|raw }}
		</div>
		{{ form_start(form) }}
		{{ form_widget(form) }}
		<button type="submit" class="btn btn-primary">Envoyer</button>
		{{ form_end(form) }}
		{% if article.comments|length > 0 %}
			<h2 class="mb-3">Commentaires des utilisateurs :</h2>
			<div id="listComments">
				{% for comment in article.comments|sort|reverse|slice(0,3) %}
					<div class="row post-comment">
						<h6 class="col-sm-3">
							<strong>{{ comment.user.nickname }}</strong><br/>
							publié le
							<br/>
						</h6>
						<div class="col-sm-9">
							<blockquote>
								{{comment.content}}
							</blockquote>

						</div>
						<hr>
					{% endfor %}
				</div>
			{% endif %}
			<div class="mt-8">
				<a href="{{ path('app_article_index') }}" class="text-blue-600 hover:underline">Retour à la liste</a>
			</div>
		</div>
	{% endblock %}
