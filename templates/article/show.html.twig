{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="container mt-4 mb-4 mx-auto px-4 py-8 bg-white rounded-lg shadow-lg max-w-4xl">
        {# En-tête de l'article #}
        <h1 class="text-4xl font-bold mb-6 text-gray-900">{{ article.title }}</h1>

        {# Image de couverture #}
        <div class="mb-8">
            <img src="{{ article.coverImage }}"
                 alt="{{ article.title }}"
                 class="w-full h-[400px] object-cover rounded-lg shadow-md">
        </div>

        {# Chapeau de l'article #}
        <div class="mb-6 text-xl text-gray-700 font-light">
            {{ article.standFirst }}
        </div>

        {# Métadonnées #}
        <div class="flex gap-4 mb-8 text-sm text-gray-500">
            <p>Créé le: {{ article.createdAt|date('d/m/Y H:i') }}</p>
            <p>Mis à jour le: {{ article.updatedAt|date('d/m/Y H:i') }}</p>
        </div>

        {# Contenu de l'article #}
        <div class="prose max-w-none mb-12">
            {{ article.content|raw }}
        </div>

        {# Section commentaires #}
        <div class="bg-gray-50 p-6 rounded-lg">
            <h2 class="text-2xl font-bold mb-6 text-gray-900">Ajouter un commentaire</h2>

            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn bg-[#197278] hover:bg-[#283D3B] transition-colors">
                    Envoyer
                </button>
            {{ form_end(form) }}

            {% if article.comments|length > 0 %}
                <div class="mt-8">
                    <h2 class="text-2xl font-bold mb-6 text-gray-900">Commentaires ({{ article.comments|length }})</h2>
                    <div class="space-y-6">
                        {% for comment in article.comments|sort|reverse|slice(0,3) %}
                            <div class="bg-white p-4 rounded-lg shadow">
                                <div class="flex items-center gap-4 mb-2">
                                    <strong class="text-[#197278]">{{ comment.user.nickname }}</strong>
                                    <span class="text-sm text-gray-500">publié le </span>
                                </div>
                                <blockquote class="text-gray-700">
                                    {{ comment.content }}
                                </blockquote>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>

        {# Bouton retour #}
        <div class="mt-8">
            <a href="{{ path('app_article_index') }}"
               class="inline-flex items-center text-[#197278] hover:text-[#283D3B]">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}
