{{ form_start(form, {
	'action': path('app_forum_message_new'),
	'method': 'POST',
	'attr': {
		'class': 'w-full',
	}
}) }}

<div class="flex flex-col align-middle gap-2 w-full">
	<div>
		{{ form_widget(form.content, { 'attr': { 'class': 'w-full border-gray-300 rounded-md shadow-sm p-2 mt-1 text-black', 'placeholder': 'Votre message', 'rows': 4 } }) }}
	</div>
	{{ form_widget(form.topic) }}
	<div class="flex justify-end">
		<button type="submit" class="btn">Envoyer</button>
	</div>
</div>

{{ form_end(form) }}
