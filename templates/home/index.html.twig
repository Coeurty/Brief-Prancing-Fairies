{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<!-- Carousel Container -->
<div class="relative w-full mx-auto mb-8">
  <!-- Watermark with adjustable text -->
  <div class="absolute top-0 left-0 w-full h-full z-10 pointer-events-none flex justify-start items-center"
      style="background: linear-gradient(to right, rgba(40, 61, 59, 0.7) 50%, rgba(40, 61, 59, 0) 50%);">
    <span class="text-white font-bold opacity-80 ml-4" style="font-size: 5vw;">CyclOO</span>
  </div>

  <!-- Slide Wrapper -->
  <div class="overflow-hidden rounded-lg shadow-lg">
    <div class="flex transition-transform duration-500 ease-in-out" id="carouselSlides">
      <!-- Slides -->
      {% for image in sliderImages %}
        <div class="flex-shrink-0 w-full">
          <img src="{{ vich_uploader_asset(image) }}" alt="Slide {{ loop.index }}" class="w-full h-auto">
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Navigation buttons -->
  <button class="absolute top-1/2 left-0 transform -translate-y-1/2 px-4 py-2 text-white bg-[#283D3B] opacity-50 hover:opacity-100 transition-opacity z-20 rounded-r" id="prevButton">
    &lt;
  </button>
  <button class="absolute top-1/2 right-0 transform -translate-y-1/2 px-4 py-2 text-white bg-[#283D3B] opacity-50 hover:opacity-100 transition-opacity z-20 rounded-l" id="nextButton">
    &gt;
  </button>
</div>

<div class="py-8 bg-gradient-to-b from-[#283D3B] to-[#197278]">
    <div class="container mx-auto px-4">
        <!-- En-tête -->
        <div class="mb-8 text-center">
          <h2 class="text-center text-5xl text-white m-4">
            Actualités
          </h2>
          <p class="text-white m-4">
            Nos derniers articles sur le cyclotourisme et les itinéraires vélo
          </p>
          <div class="flex justify-center mb-4">
            <a href="{{ path('app_article_index') }}" class="btn bg-[#C44536]">Voir tous les articles</a>
          </div>
        </div>

        {{ include("/article/partials/_article_list.html.twig", {"articles": articles}) }}
    </div>
</div>

<!-- Map Section -->
<section class="h-screen bg-gradient-to-b from-[#197278] to-[#283D3B] mb-8">
<div class="flex flex-col h-full w-11/12 md:w-[720px] mx-auto">
  <!-- Sidebar -->
  {# TODO: Remove the sidebar (useless here), problem with js #}
  <div style="display: none;" class="lg:w-1/4 w-full bg-[#EDDDD4] p-4 lg:rounded-l-lg">
    <h2 class="text-xl font-bold mb-4 text-[#283D3B]">Traces GPX</h2>

    <!-- Stats Display -->
    <div id="track-stats" class="mb-4 p-3 bg-white rounded shadow-sm hidden">
      <h3 class="font-semibold mb-2 text-[#197278]">Statistiques du tracé</h3>
      <div id="stats-content" class="text-sm mb-2 text-gray-600"></div>
      <div id="estimated-time" class="text-sm text-gray-600"></div>
    </div>

     <ul id="gpx-list" class="space-y-2">
      <li data-url="/gpx/EuroVelo 5 Via_Romea.gpx" class="track-item bg-blue-500 text-white text-center p-2 rounded hover:bg-blue-600 cursor-pointer">Euro Vélo Nord Complète</li>
      <li data-url="/gpx/Calais-St-Omer.gpx" class="track-item bg-blue-500 text-white text-center p-2 rounded hover:bg-blue-600 cursor-pointer">Calais->St-Omer</li>
      <li data-url="/gpx/St-Omer-Bethunes.gpx" class="track-item bg-blue-500 text-white text-center p-2 rounded hover:bg-blue-600 cursor-pointer">St-Omer->Béthunes</li>
      <li data-url="/gpx/Bethunes-Lens.gpx" class="track-item bg-blue-500 text-white text-center p-2 rounded hover:bg-blue-600 cursor-pointer">Béthunes->Lens</li>
      <li data-url="/gpx/Lens-Lille.gpx" class="track-item bg-blue-500 text-white text-center p-2 rounded hover:bg-blue-600 cursor-pointer">Lens->Lille</li>
      <li data-url="/gpx/lille-wattrelos.gpx" class="track-item bg-blue-500 text-white text-center p-2 rounded hover:bg-blue-600 cursor-pointer">Lille->Wattrelos</li>
    </ul>

    <div class="mt-4 space-y-4">
      <div>
        <label class="block text-sm font-medium text-[#283D3B]">Fond de carte</label>
        <select id="map-style" class="mt-1 p-2 border rounded w-full focus:border-[#197278] focus:ring-[#197278]">
          <option value="osm">OpenStreetMap</option>
          <option value="esri">Esri Satellite</option>
          <option value="terrain">Terrain</option>
        </select>
      </div>

      <div class="relative">
        <label class="block text-sm font-medium text-[#283D3B]">Import GPX</label>
        <input type="file" id="gpx-upload" class="hidden" accept=".gpx" />
        <button onclick="document.getElementById('gpx-upload').click()"
                class="mt-1 w-full bg-[#197278] text-white p-2 rounded hover:bg-[#283D3B] transition-colors">
          Charger un fichier GPX
        </button>
        <div id="file-name" class="text-sm mt-1 text-gray-600"></div>
      </div>

      <button id="download-gpx"
              class="w-full bg-[#197278] text-white p-2 rounded hover:bg-[#283D3B] transition-colors disabled:opacity-50 disabled:hover:bg-[#197278]"
              disabled>
        Télécharger en GPX
      </button>
    </div>
  </div>

    <h2 class="text-center text-5xl text-white m-4">EV5 des Hauts-de-France</h2>
    <div class="flex justify-center mb-4">
        <a href="{{ path('app_itinerary') }}" class="btn bg-[#C44536]">Détails et traces GPX</a>
    </div>
    <!-- Map container -->
    <div id="map" class="flex-grow rounded-lg"></div>
</div>
</section>
{% endblock %}
