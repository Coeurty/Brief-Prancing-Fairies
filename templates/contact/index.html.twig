{% extends 'base.html.twig' %}

{% block title %}Page Contact{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto mt-8 mb-8 p-6 bg-white shadow-md rounded-lg">
    {% for message in app.flashes('success') %}
        <div class="mb-4 p-4 text-green-800 bg-green-100 border border-green-300 rounded-lg">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="mb-4 p-4 text-red-800 bg-red-100 border border-red-300 rounded-lg">
            {{ message }}
        </div>
    {% endfor %}

    <h1 class="text-2xl font-bold text-gray-800 mb-6">Formulaire de Contact</h1>

    {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}
        {{ form_row(form.email, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' }, 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } }) }}
        {{ form_row(form.subject, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' }, 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } }) }}
        {{ form_row(form.message, { 'label_attr': { 'class': 'block text-sm font-medium text-gray-700' }, 'attr': { 'class': 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' } }) }}
        {{ form_row(form.submit, { 'attr': { 'class': 'w-full py-2 px-4 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' } }) }}
    {{ form_end(form) }}
</div>
{% endblock %}
