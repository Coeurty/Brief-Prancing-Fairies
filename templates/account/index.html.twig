{% extends 'base.html.twig' %}

{% block title %}My Account{% endblock %}

{% block body %}
<div class="p-6 sm:p-10">
    <div class="container mx-auto p-10 bg-[#197278] rounded-lg shadow-lg">
        <h1 class="text-3xl font-semibold text-gray-900 mb-6">Mon compte</h1>

        {# Display flash messages #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success bg-green-500 text-black p-4 rounded-lg mb-4 shadow-md">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-error bg-red-500 text-black p-4 rounded-lg mb-4 shadow-md">
                {{ message }}
            </div>
        {% endfor %}

        <div class="flex flex-col lg:flex-row items-start lg:justify-between mb-6">
            {# Form Fields on the Left #}
            <div class="w-full lg:w-1/2 lg:pr-8 mb-6 lg:mb-0">
                <h3 class="text-2xl font-medium text-gray-900 mb-6">Profile</h3>
                {# Form start #}
                {{ form_start(form) }}
                    <div class="space-y-6">
                        {# Nickname Field #}
                        <div class="flex flex-col">
                            {{ form_row(form.nickname, {
                                'attr': {
                                    'class': 'px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200'
                                }
                            }) }}
                        </div>

                        {# Profile Picture Upload Field #}
                        <div class="flex flex-col">
                            <label for="profilePicture" class="font-medium text-gray-900 mb-2">Changer de photo de profil</label>
                            
                            {# Champ de téléchargement #}
                            {{ form_widget(form.profilePicture, {
                                'attr': {
                                    'class': 'px-4 py-2 border text-gray-900 border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-200'
                                }
                            }) }}
                            
                            {# Gestion des erreurs personnalisées #}
                            {% if form.profilePicture.vars.errors is not empty %}
                                {% for error in form.profilePicture.vars.errors %}
                                    <div class="text-white text-sm mt-2">
                                        {{ error.message }}
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>


                        {# Save Button #}
                        <div class="mt-4">
                            <button type="submit" class="w-full btn bg-[#C44536]">
                                Sauvegarder
                            </button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>

            {# Vertical Divider (Stick) #}
            <div class="border-l-2 border-gray-300 mx-6 h-auto lg:block hidden"></div>

            {# Profile Picture on the Right #}
            <div class="flex justify-center items-center w-[200px] h-[200px] lg:w-[300px] lg:h-[300px] rounded-full overflow-hidden bg-gray-200 border-4 border-white shadow-lg">
                <img src="{{ app.user.getprofilePictureUrl() }}" alt="" class="w-full h-full object-cover">
            </div>
        </div>
    </div>
</div>
{% endblock %}
