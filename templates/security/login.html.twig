{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<main class="flex items-center justify-center w-11/12 md:w-1/2 mx-auto my-10 text-white">
		<form method="post" class="w-full max-w-md bg-[#197278] shadow-md rounded-lg p-6">
			{% if error %}
				<div class="mb-4 text-red-500 text-sm">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			<h1 class="text-2xl font-bold mb-6 text-center">Connexion</h1>

			<div class="mb-4">
				<label for="username" class="block text-sm font-medium">Adresse email</label>
				<input type="email" value="{{ last_username }}" name="_username" id="username" class="w-full border-gray-300 rounded-md shadow-sm  p-2 mt-1 text-black" autocomplete="email" required autofocus>
			</div>

			<div class="mb-4">
				<label for="password" class="block text-sm font-medium">Mot de passe</label>
				<input
				type="password" name="_password" id="password" class="w-full border-gray-300 rounded-md shadow-sm  p-2 mt-1 text-black" autocomplete="current-password" required>
				{# TODO: Implement this feature #}
				<a class="text-xs" href="">Mot de passe oublié</a>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div class="flex items-center mb-4">
				<input type="checkbox" name="_remember_me" id="_remember_me" class="h-4 w-4 border-gray-300 rounded">
				<label for="_remember_me" class="ml-2 block text-sm">Se souvenir de moi</label>
			</div>

			<div>
				<button type="submit" class="w-full btn bg-[#C44536]">
					Connexion
				</button>
			</div>

			<div>
				<a href="{{ path('app_register') }}" class="block text-center text-sm mt-4">
					Pas encore inscrit ? Créez un compte
				</a>
			</div>
		</form>
	</main>
{% endblock %}
